[Unit]
Description=Hypercorn instance for Fast API experiment
After=network.target

[Service]
User=nginx
Group=nginx
WorkingDirectory=/var/www/modules/fast_api_template_hello_world
Environment="PATH=/var/www/modules/fast_api_template_hello_world"
ExecStart=/usr/local/bin/hypercorn fast_api_template_hello_world.py --reload --config fast_api_template_hello_world.toml

[Install]
WantedBy=multi-user.target